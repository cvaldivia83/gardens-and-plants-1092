<p style="color: green"><%= notice %></p>

<div class="banner" style= 'background-image: url(<%= @garden.banner_url %>)'>
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>



<div class="container card m-3 p-3">
  <%= simple_form_for [@garden, @plant] do |f| %>
    <%= f.input :name %>
    <%= f.input :image_url %>
    <%= f.submit %>
  <% end %>
</div>

<div class="container">
  <div class="row my-5">
    <% @garden.plants.each do |plant| %>
      <div class="col-4">
        <div class="card-category" style="background-image: url(<%= plant.image_url %>) ">
        <%= link_to "+",
          plant_path(plant),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'card-remove-link'
        %>
          <%= plant.name %>

        </div>
      </div>
    <% end %>
  </div>
</div>
